<UserControl x:Class="HospitalManagement.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HospitalManagement"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="{StaticResource ForegroundLightBrush}">
       
            <Grid.RowDefinitions>
               <!-- Panel Title -->
               <RowDefinition Height="Auto"/>
               <!-- Main Content -->
               <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
       
       <!-- Panel Title -->
       <Grid Height="50">
          
          <!-- Back button -->
          <Button Style="{StaticResource IconGrowButton}"
                  Content="{StaticResource FontAwesomeArrowLeftIcon}"
                  FontFamily="{StaticResource FontAwesome}"
                  Foreground="{StaticResource BackgroundLightBrush}"
                  Height="40"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Center"
                  Command="{Binding CloseCommand}"/>
          
          <TextBlock FontSize="{StaticResource FontSizeLarge}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center">
             <!-- Cog icon -->
             <Run FontFamily="{StaticResource FontAwesome}"
                  Text="{StaticResource FontAwesomeCogIcon}"
                  Foreground="{StaticResource WordOrangeBrush}"/>
             <!-- Settings text -->
             <Run Text="Jessica"
                  FontFamily="{StaticResource LatoRegular}"
                  Foreground="{StaticResource ForegroundVeryDarkBrush}"/>
          </TextBlock>
          
       </Grid>
       
       <!-- Main Content -->
       
    </Grid>
</UserControl>
